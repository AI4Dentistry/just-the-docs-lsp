{% assign heroBackground = page.hero_background %}

{% if site.logo %}
  $logo: "{{ site.logo | absolute_url }}";
{% endif %}
{% if heroBackground %}
  $heroBackground: "{{ heroBackground | absolute_url }}";
{% endif %}
{% if site.banner_links.lsp or site.banner_links.hits %}
  $hasBanner: true;
{% else %}
  $hasBanner: false;
{% endif %}

@import "./support/support";
@import "./color_schemes/{{ include.color_scheme }}";
@import "./modules";
{% include css/custom.scss.liquid %}
